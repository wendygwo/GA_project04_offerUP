<p id="notice"><%= notice %></p>

<%= image_tag @user.photo.url("medium") %>

<h3>My info</h3>
<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @user.zip_code %>
</p>

<p>
  <strong>City:</strong>
  <%= @user.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @user.state %>
</p>

<hr>
<h3>My friends(<%= link_to 'Add more friends', users_path %>)</h3>
<%= form_tag search_goods_path, :method => :get do %>
 <%= text_field_tag :location, params[:location], :placeholder => 'Location', :class => "form-control" %>
 <%= text_field_tag :name, params[:name], :class => "form-control" %>
 <%= submit_tag "Search close to you", :name => nil, :class => "btn btn-danger" %>
<% end %>
<ul>
  <% for friendship in @user.friendships %>
    <li>
      <%= friendship.friend.first_name %> 
      (<%= link_to 'remove', friendship, method: :delete %>)
    </li>
  <% end %>
</ul>
<hr>

<h3>My Goods(<%= link_to 'Add New Good', new_good_path(user_id: @user.id) %>)</h3>
<% @goods.each do |g| %>
<%= image_tag g.photo.url('medium') %><br />
<%= g.name %><br />
<%= g.description %><br />
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
