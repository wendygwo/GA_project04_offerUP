<%= form_for(@good, data:{abide: ''}) do |f| %>
  <% if @good.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@good.errors.count, "error") %> prohibited this good from being saved:</h2>

      <ul>
      <% @good.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :required => '' %>
    <small class="error">Please enter a name for your good.</small>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :required => '' %>
    <small class="error">Please enter a description.</small>
  </div>
  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>
  <% if params[:user_id] != nil %>
    <%= f.hidden_field :user_id, value:params[:user_id] %>
  <% else %>
    <%= f.hidden_field :user_id, value:current_user.id %>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
