<div class="container-fluid">

	<div class="row">
		<div class='col-xs-6 col-xs-offset-3 text-center'>
			<h1>Log-in!</h1>	
		</div>
	</div>

	<div class="row">
		<div class='col-xs-12 text-center'>
			<%if params[:error_message] != nil %>
				<p class="text-danger"><%= params[:error_message] %></p>
			<% end %> 
			</div>
	</div>

	<%= form_for @user, :url => { :controller => "sessions", :action => "create" } do |f| %> <!-- See the comment under the f.submit line for details. the url tells it to go to the sessions path, create method instead-->

		<div class="row">
			<div class='col-xs-4 col-xs-offset-4'>
				<p><%= f.text_field :email, class: 'signupfield' %></p>

				<p><%= f.password_field :password, class: 'signupfield' %></p>

				<p><%=f.submit 'Log yourself in', :class =>  'btn btn-primary center-block' %> </p><!-- This will post back to the users controller by default because it's a user. We need to override this behavior -->
			</div>
		</div>

	<% end %>

	<div class="row">
		<div class='col-xs-2'></div>
		<div class='col-xs-8 text-center'>
			<%= link_to 'New user? Create an account here', new_user_path %>
		</div>
		<div class='col-xs-2'></div>
	</div>
</div>
		