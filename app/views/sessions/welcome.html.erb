  <div class="large-4 small-12 columns value">
    <div class='works_icon'>
      <%= fa_icon 'usd' %>
    </div>
    <h6>
      Find what you need. Save money. 
      <br />
      Win at life.
    </h6>
  </div>
  <!-- icons end -->
<!-- end how it works row -->
</div>
